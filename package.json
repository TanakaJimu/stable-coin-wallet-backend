{
  "name": "stable_coin_wallet",
  "version": "1.0.0",
  "private": true,
  "description": "Stable Wallet Coin: backend API + blockchain (Hardhat)",
  "scripts": {
    "start": "node index.js",
    "start:backend": "cd backend && npm start",
    "dev": "cd backend && npm run dev",
    "backend:install": "cd backend && npm install",
    "blockchain:install": "cd blockchain && npm install",
    "install:all": "npm run backend:install && npm run blockchain:install",
    "compile": "cd blockchain && npm run compile",
    "deploy:amoy": "cd blockchain && npm run deploy:amoy",
    "test:blockchain": "cd blockchain && npm test",
    "blockchain:node": "cd blockchain && npx hardhat node",
    "postinstall": "cd backend && npm install"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4.0.4",
    "ethers": "^6.16.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  }
}
