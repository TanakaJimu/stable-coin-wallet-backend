# Server
PORT=3000
NODE_ENV=development

# MongoDB
MONGO_URI=mongodb://localhost:27017/stable_wallet_coin

# JWT
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=15m

# Blockchain (for on-chain flows, Polygon Amoy)
CHAIN_ID=80002
AMOY_RPC_URL=https://rpc-amoy.polygon.technology
BLOCKCHAIN_RPC_URL=https://rpc-amoy.polygon.technology
RPC_URL=https://rpc-amoy.polygon.technology
DEPLOYMENTS_PATH=../blockchain/deployments

# Mock ERC20 + Swap (from deployments/amoy.json or set here)
MOCK_USDT_ADDRESS=
MOCK_USDC_ADDRESS=
MOCK_SWAP_ADDRESS=

# Operator / backend signer (for withdraw, swap, mint). Production: use KMS/HSM.
OPERATOR_PRIVATE_KEY=0x...
BACKEND_SIGNER_PRIVATE_KEY=0x...

# Watcher
CONFIRMATIONS=6
WATCHER_POLL_MS=12000

# Optional: asset name for StableToken in DB (e.g. USDT)
STABLE_TOKEN_ASSET=USDT

# Custodial address generation (encrypt generated private keys). Production: use KMS (AWS/GCP/HashiCorp Vault).
MASTER_KEY=your-master-key-min-16-chars-change-in-production
# Optional: ENCRYPTION_ALGO=aes-256-gcm
