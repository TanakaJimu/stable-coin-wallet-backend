# Server
PORT=3000
NODE_ENV=development

# MongoDB
MONGO_URI=mongodb://localhost:27017/stable_wallet_coin

# JWT
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=15m

# Blockchain (for on-chain flows)
CHAIN_ID=80002
BLOCKCHAIN_RPC_URL=https://rpc-amoy.polygon.technology
RPC_URL=https://rpc-amoy.polygon.technology
DEPLOYMENTS_PATH=../blockchain/deployments

# Operator / backend signer (for withdraw, swap, mint). Production: use KMS/HSM.
OPERATOR_PRIVATE_KEY=0x...
BACKEND_SIGNER_PRIVATE_KEY=0x...

# Watcher
CONFIRMATIONS=6
WATCHER_POLL_MS=12000

# Optional: asset name for StableToken in DB (e.g. USDT)
STABLE_TOKEN_ASSET=USDT
